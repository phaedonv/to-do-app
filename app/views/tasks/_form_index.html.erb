<%= form_for(@task) do |f| %>
  <div id="add-form">

   <div class="form-group">
    <%= f.text_field :title, class: 'form-control', placeholder: 'New Shopping Item' %>
  </div>

  <div class="form-group">
    <%= f.number_field :user_id,
    id: :friend_user_id,
    class: 'form-control',
    value: current_user.id, type: :hidden %>
  </div>

  <% unless f.object.new_record? %>
    <div class="checkbox">
      <label>
        <%= f.check_box :completed %> Completed
      </label>
    </div>

  </div>
  <% end %>

  <%= f.submit "Add New Item", class: 'btn btn-dark' %>
<% end %>

<div class="container">
  <div>
    <h1 id="title">Tasks 2Do</h1>
  </div>

  <% if user_signed_in? %>
  <div>
    <h2 id="user"><%= current_user.email %> is connected</h2>
  </div>
  <% end %>

  <div class="container">
      <ul id="tasks">
        <% @tasks.each do |task| %>
          <% if task.user == current_user %>
            <li>
              created by user: <%= task.user_id %>
            </li>
            <% if task.completed %>
            <li class="list-group-item list-group-item-success">
              <%= link_to task.title, task_path(task.id) %> <i class="fa fa-check-square-o"></i>

              <%= link_to task_path(task.id), method: :delete, data: { confirm: "Delete #{task.title}?" } do %>
              <i class="fa fa-trash-o" aria-hidden="true"></i>
            <% end %>
            </li>

            <% else %>
            <li class="list-group-item list-group-item-danger">
              <%= link_to task.title, task_path(task.id) %> <i class="fa fa-square-o"></i>

              <%= link_to task_path(task.id), method: :delete, data: { confirm: "Delete #{task.title}?" } do %>
              <i class="fa fa-trash-o" aria-hidden="true"></i>
            <% end %>
            </li>
            <% end %>
          <% end %>
          <% link_to task.title, tasks_path(task) %>
        <% end %>
      </ul>
  </div>
</div>

<hr>

<%= link_to new_task_path do %>
  <i class="fa fa-plus"></i> Add a new task
<% end %>





